<section class=".loginBody">
    <div class="row g-0">
        <div class="col-lg-7 d-none d-lg-block">
            <img src="https://img.freepik.com/vector-gratis/descuentos-venta-temporada-presenta-compra-visita-boutiques-compras-lujo-cupones-promocionales-reduccion-precio-ofertas-especiales-vacaciones-ilustracion-metafora-concepto-aislado-vector_335657-2766.jpg?w=826&t=st=1686853522~exp=1686854122~hmac=18b5344c831950a0e37325f79a8ffca62ec7576deb7454608f6abe542acf16bd" alt="" class="vh-100 w-100">
        </div>
        <div class="col-lg-5 bg-dark d-flex flex-column align-items-end vh-100">
            <div class="align-self-center w-100 px-lg-5 py-lg-4 p-4">
                <h1 class="font-weight-bold mb-4 text-light fs-3">Bienvenido a EncontraDeTodo!</h1>
                <form class="mb-5">
                    <div class="mb-4 text-light">
                        <label for="InputEmail" class="form-label font-weight-bold">Email</label>
                        <input type="email" class="text-light form-control bg-dark-x border-0 inputPlaceholder" id="InputEmail"
                            placeholder="Ingresa tu email" aria-describedby="emailHelp" name="user">
                    </div>
                    <div class="mb-4 text-light">
                        <label for="InputPassword" class="form-label font-weight-bold ">Contraseña</label>
                        <input type="password" class="form-control bg-dark-x border-0 mb-2 inputPlaceholder"
                            placeholder="Ingresa tu contraseña" id="InputPassword" name="pass">
                        <a href="" id="emailHelp" class="form-text text-muted text-decoration-none text-light">¿Has olvidado tu
                            contraseña?</a>
                    </div>
                    <button type="submit" class="btn btn-primary w-100 ">Iniciar sesión</button>
                </form>

                <p class="font-weight-bold text-center text-muted text-light">O inicia sesión con</p>
                <div class="d-flex justify-content-around">
                    <button type="button" class="btn btn-outline-light flex-grow-1 mx-2" disabled><i
                            class="fab fa-google lead" ></i> Google</button>
                    <button type="button" class="btn btn-outline-light flex-grow-1 mx-2" disabled><i
                            class="fab fa-facebook-f lead" ></i> Facebook</button>
                </div>
            </div>
            <div class="text-center px-lg-5 pt-lg-3 pb-lg-4 p-4 mt-auto w-100 d-flex flex-column">
                <p class="d-inline-block mb-0 text-light">¿Todavia no tienes una cuenta?</p> 
                <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#staticBackdrop">
                    Crea una ahora
                </button>
            </div>


            <!-- Modal -->
            <div class="modal fade" id="staticBackdrop" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1"
                aria-labelledby="staticBackdropLabel" aria-hidden="true">
                <div class="modal-dialog">
                    <div class="modal-content">
                        <div class="modal-header">
                            <h1 class="modal-title fs-5" id="staticBackdropLabel">Registrese</h1>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <form action='/api/users/' method='post'>
                                <div class='row'>
                                    <div class='col-12'>
                                        <label for="first_name">Nombre:</label>
                                        <input type='text' class='form-control font-weight-bold bg-light' placeholder='Cosme' aria-label='Nombre' name='first_name' id="first_name" />
                                    </div>
                                    <div class='col-12'>
                                        <label for="last_name">Apellido:</label>
                                        <input type='text' class='form-control font-weight-bold bg-light' placeholder='Fulanito' aria-label='Apellido' name='last_name' id="last_name" />
                                    </div>
                                    <div class='col-12'>
                                        <label for="email">Correo Electrónico:</label>
                                        <input type='email' class='form-control font-weight-bold bg-light' placeholder='cosme_fulanito@gmail.com' aria-label='Correo'
                                            name='email' id="email"/>
                                    </div>
                                    <div class='col-12'>
                                        <label for="password">Contraseña:</label>
                                        <input type='password' class='form-control font-weight-bold bg-light' placeholder='Contraseña' aria-label='Contraseña'
                                            name='password' id="password"/>
                                    </div>
                        </div>
                        <div class="modal-footer">
                            <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cerrar</button>
                            <button type="button" class="btn btn-primary">Registrar</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>